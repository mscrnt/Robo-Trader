FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir \
    sqlalchemy psycopg2-binary \
    pandas numpy ta scikit-learn \
    httpx pyyaml python-dotenv \
    yfinance alpaca-py \
    feedparser beautifulsoup4 minio

COPY libs/ ./libs/
COPY configs/ ./configs/
COPY services/signals/ ./services/signals/
COPY services/ingest/ ./services/ingest/

CMD ["python", "-u", "services/signals/startup.py"]